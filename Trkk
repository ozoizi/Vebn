<canvas id="matrix"></canvas>

<script>
  const canvas = document.getElementById("matrix");
  const ctx = canvas.getContext("2d");

  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;

  const harfler = "ABCDEFGHIJKLMN0123456789ã‚ã„ã†ãˆãŠã‚¢ã‚¤ã‚¦ã‚¨ã‚ª";
  const karakterler = harfler.split("");
  const fontBoyutu = 13;
  const sutunSayisi = canvas.width / fontBoyutu;
  const damlalar = [];

  for (let x = 0; x < sutunSayisi; x++) damlalar[x] = 1;

  function ciz() {
    ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    ctx.fillStyle = "#0F0";
    ctx.font = fontBoyutu + "px monospace";

    for (let i = 0; i < damlalar.length; i++) {
      const text = karakterler[Math.floor(Math.random() * karakterler.length)];
      ctx.fillText(text, i * fontBoyutu, damlalar[i] * fontBoyutu);

      if (damlalar[i] * fontBoyutu > canvas.height && Math.random() > 0.975) {
        damlalar[i] = 0;
      }
      damlalar[i]++;
    }
  }

  setInterval(ciz, 35);

  window.addEventListener("resize", () => {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  });
</script>
